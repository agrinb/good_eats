<h2>Submit a Review</h2>

<h3>Write a review for your favorite review </h3>

<div>
  <%= form_for [@restaurant, @review] do |f| %>

    <p>
      <%= f.label :body, "Review:" %>
      <%= f.text_area :body, size: "60x12" %>
    </p>

    <p>
      <%= f.label :rating, "Rating:" %>
      <% options = options_from_collection_for_select(@ratings, 'id', 'rating') %>
      <%= f.select :rating,  options %>

    </p>


  <%= f.submit "Create" %>
<% end %>
</div>
