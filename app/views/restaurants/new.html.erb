<h2>Create a New Restaurant</h2>

<div>
  <%= form_for @restaurant, url: {action: "create"} do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>


    <%= f.label :address %>
    <%= f.text_field :address %>


    <%= f.label :city %>
    <%= f.text_field :city %>


    <%= f.label :state %>
    <%= f.text_field :state %>


    <%= f.label :zipcode, "Zip Code" %>
    <%= f.text_field :zipcode %>


  <%= f.submit "Create" %>
<% end %>
</div>
